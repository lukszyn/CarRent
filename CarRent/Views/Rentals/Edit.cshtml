@model CarRent.ViewModels.EditRentalViewModel

@{ 
    ViewBag.Title = "Edit rental";
}

<h1>@ViewBag.Title</h1>

<h4>Rental</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Rentals" asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DateOfRental" class="control-label"></label>
                <input asp-for="DateOfRental" class="form-control" readonly="readonly"/>
                <span asp-validation-for="DateOfRental" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOfReturn" class="control-label"></label>
                <input asp-for="DateOfReturn" class="form-control" />
                <span asp-validation-for="DateOfReturn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="@Model.Id" />
                <input type="submit" value="@ViewBag.Title" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

