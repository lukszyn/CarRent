@using Microsoft.AspNetCore.Identity

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item text-dark">
            <a class="nav-link text-dark" href="#">Hello @UserManager.GetUserName(User)!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-controller="account" asp-action="logout">
                <button type="submit" class=" nav-link btn btn-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link btn btn-outline-dark mr-2" asp-controller="account" asp-action="login">Login</a>
        </li>
        <li class="nav-item">
            <a class=" nav-link btn btn-dark" asp-controller="account" asp-action="register">Register</a>
        </li>
    }
</ul>